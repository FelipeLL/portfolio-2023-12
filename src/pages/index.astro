---
import Layout from "../layouts/Layout.astro";
import ResumeIcon from "@/icons/Resume.astro";
import { Cover } from "@/components/Cover";
import { iconList } from "@/utils/consts";
---

<Cover client:only />
<Layout title="Felipe L.">
  <section class="flex justify-center items-center grow">
    <div class="flex flex-col items-center">
      <img
        src="/profile.webp"
        alt="Imagen de perfil"
        class="w-32 xl:w-36 mb-8"
      />
      <h1 class="mb-4 text-4xl xl:text-5xl font-bold" transition:name="title">
        Felipe Ladino
      </h1>
      <p class="mb-8 text-lg" transition:name="description">
        I'm a Systems Engineer passionate about software development
      </p>

      <div class="flex gap-x-8 mb-8" transition:name="social_icons">
        {
          iconList.map((item) => (
            <a href={item.url} target="_blank">
              <item.icon className="w-7 h-7 hover:text-custom-blue-500 dark:hover:text-custom-blue-400  hover:scale-150 cursor-pointer transition duration-300 ease-in" />
            </a>
          ))
        }
      </div>

      <button
        class="flex items-center gap-2 py-3 px-10 rounded-full font-bold bg-custom-blue-500 dark:bg-custom-blue-600/90 hover:bg-custom-blue-600 dark:hover:bg-custom-blue-700/90 text-white"
      >
        <ResumeIcon />
         Resume
      </button>
    </div>
  </section>
</Layout>

