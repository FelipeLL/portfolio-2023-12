---
import Layout from "../layouts/Layout.astro";
import GithubIcon from "@/icons/Github.astro";
import InstagramIcon from "@/icons/Instagram.astro";
import LinkedinIcon from "@/icons/Linkedin.astro";
import TwitterIcon from "@/icons/Twitter.astro";
import ResumeIcon from "@/icons/Resume.astro";

const iconList = [GithubIcon, InstagramIcon, LinkedinIcon, TwitterIcon];
---

<Layout title="Felipe L.">
  <div class="flex justify-center items-center h-full">
    <div class="flex flex-col items-center">
      <img src="/profile.webp" alt="Imagen de perfil" class="w-32 mb-8" />
      <h1 class="mb-4 text-4xl xl:text-5xl font-bold">Felipe Ladino</h1>
      <p class="mb-8 text-lg">
        I'm a Systems Engineer passionate about software development
      </p>

      <div class="flex gap-x-8 mb-8">
        {
          iconList.map((Icon) => (
            <Icon className="w-7 h-7 hover:text-custom-blue-400 hover:scale-150 cursor-pointer transition duration-300 ease-in" />
          ))
        }
      </div>

      <button
        class="flex items-center gap-2 py-3 px-10 rounded-full font-bold bg-custom-blue-500 hover:bg-custom-blue-600"
      >
        <ResumeIcon />
         Resume
      </button>
    </div>
  </div>
</Layout>

